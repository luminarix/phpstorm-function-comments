<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.luminarix.phpstormfunctioncomments</id>
    <name>Function Comments</name>
    <vendor url="https://github.com/luminarix">Luminarix Labs</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <actions>
        <group id="functioncomments.FunctionCommentActions" text="Function Comments"
               description="Comment out entire PHP functions">
            <action id="functioncomments.CommentFunctionSingleLine"
                    class="com.github.luminarix.phpstormfunctioncomments.actions.SingleLineCommentFunctionAction"
                    text="Comment Function (Single-Line)"
                    description="Comment out the entire function using single-line comments">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt SLASH"/>
            </action>
            <action id="functioncomments.CommentFunctionMultiLine"
                    class="com.github.luminarix.phpstormfunctioncomments.actions.MultiLineCommentFunctionAction"
                    text="Comment Function (Multi-Line)"
                    description="Comment out the entire function using block comment">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift SLASH"/>
            </action>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>
